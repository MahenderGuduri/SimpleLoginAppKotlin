<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/ic_mainbg">

                <ImageView
                    android:id="@+id/img_back_otp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:src="@drawable/ic_back" />

                <ImageView
                    android:id="@+id/img_reg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/my_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_reg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dim_10"
                    android:fontFamily="@font/encodesans_semibold"
                    android:text="Registration"
                    android:textColor="@color/app_color"
                    android:textSize="18sp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginTop="40dp"
                android:layout_marginRight="@dimen/dim_20"
                android:orientation="vertical">

                <EditText
                    android:textColorHint="@color/app_color"
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_45"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginTop="@dimen/dim_30"
                    android:layout_marginRight="@dimen/size10"
                    android:background="@drawable/ic_edittextbg"
                    android:digits="@string/alpha"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="@dimen/dim_10"
                    android:hint="Enter Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/dim_10"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_50"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/size10"
                    android:background="@drawable/ic_edittextbg">


                    <EditText
                        android:textColorHint="@color/app_color"
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_45"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="@dimen/dim_10"
                        android:drawableTint="@color/app_color"
                        android:hint="Enter Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/dim_10"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </RelativeLayout>


                <EditText
                    android:textColorHint="@color/app_color"
                    android:id="@+id/et_mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_45"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/size10"
                    android:background="@drawable/ic_edittextbg"
                    android:drawableLeft="@drawable/ic_mobile"
                    android:drawablePadding="@dimen/dim_10"
                    android:hint="Enter Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="@dimen/dim_10"
                    android:textColor="@color/black"
                    android:textSize="14sp">


                </EditText>


                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_45"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="@dimen/dim_50"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="@dimen/dim_30"
                    android:background="@drawable/ic_regbg"
                    android:fontFamily="@font/encodesans_semibold"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>